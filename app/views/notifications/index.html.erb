<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto post-form-container">
            <h2 class="text-center">通知</h2>
                <%= link_to destroy_all_users_notifications_path, method: :delete do %>
                    <i class="fas fa-trash" style="color: black;"></i>
                    <h3 style="color: black;">全削除</h3>
                <% end %>
                <hr>
            <% if @notifications.exists? %>
                <div class="users-index">
                    <%= render @notifications %>
                </div>
            <% else %>
                <p>通知はありません</p>
            <% end %>
        </div>
    </div>
</div>            

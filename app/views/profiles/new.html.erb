<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto post-form-container">
            <h2 class="h2"><%= @user.email %></h2>
            <!-- model: @post を追加しています -->
            <%= form_with(url: create_profiles_path, model: @user_profile, local: true, method: :post, html: { class: 'post-form' }) do |f| %>
            <!-- バリデーションエラーメッセージ表示を追加しています -->
                <% if @user_profile.errors.any? %>
                    <ul>
                        <% @user_profile.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                <% end %>
            <!-- ここまで -->
                <div class="form-group image-upload">
                    <%= f.label "自己イメージ", class: 'form-label' %>
                    <div class="image-preview" id="imagePreview">
                    <img src="" alt="Image Preview" class="image-preview__image">
                    <span class="image-preview__default-text">Image will be displayed here</span>
                    </div>
                    <%= f.file_field :image, class: 'form-control-file', id: 'imageUpload' %>
                </div>
                
                <div class="form-group">
                    <%= f.label "ユーザー名", class: 'form-label' %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label "自己紹介", class: 'form-label' %>
                    <%= f.text_area :introduction, class: 'form-control' %>
                </div>

                <div class="button-group">
                    <%= f.submit '登録・更新', class: 'btn btn-primary' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
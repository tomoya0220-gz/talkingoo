<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto post-form-container">
            <h2 class="h2"><%= @user_profile.name %></h2>
            <!-- user_profileテーブルのnameカラムを取り出してる-->
            <% if current_user.id != @user_id %>
                <% if @follow.present? %>
                    <%= link_to "フォローを外す", destroy_follow_path(@follow.id), method: :delete, data: { confirm: '本当にフォローをはずしますか？' }, class: "btn btn-danger" %>
                <% else %>
                    <%= link_to "フォローする", create_follow_path(@user_profile.user_id), local: true, method: :post, class: "btn btn-success" %>
                <% end %>

                <div class="form-group image-upload">
                    <%= f.label "相手のイメージ画像", class: 'form-label' %>
                    <div class="image-preview" id="imagePreview">
                    <img src="" alt="Image Preview" class="image-preview__image">
                    <span class="image-preview__default-text">Image will be displayed here</span>
                    </div>
                    <%= f.file_field :image, class: 'form-control-file', id: 'imageUpload' %>
                </div>
                
                <div class="form-group">
                    <%= f.label "相手からのコメント", class: 'form-label' %>
                    <%= f.text_area :introduction, class: 'form-control' %>
                </div>                 
            <% end %>                 
        </div>
    </div>
</div>
